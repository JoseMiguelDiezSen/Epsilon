@using Epsilon.ViewModels
@model ViewFormAgregarUsuario

@* <input type="hidden" name="IdUsuario" id="IdUsuario" value="@Model.IdUsuario" /> *@
<form id="idUpdatePeriodo_Form" method="post" style="border:1px solid gainsboro;padding:10px" asp-action="ModificarUsuario" onsubmit="return jqPostUpdateUser(this);">


    <div class="text-center" style="border-radius:100px;margin-bottom:20px;">
        <img src="~/media/JMDnegro.png" alt="" height="100px" width="200px" />
    </div>
    <div class="row">
        <!-- Primera columna -->
        @* NOMBRE *@
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" placeholder="Ingrese su nombre" value="@Model.Nombre">
                </div>
            </div>

            @* CORREO ELECTRONICO *@
            <div class="mb-3">
                <label class="form-label">Correo Electrónico</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" class="form-control" placeholder="Ingrese su correo" value="@Model.Email">
                </div>
            </div>


            @* FECHA ALTA *@
            <div class="mb-3">
                <label class="form-label">Fecha de Alta</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-calendar"></i></span>
                    <input type="date" asp-for="FechaAlta" class="form-control">
                </div>
            </div>

            @* TURNO DE TRABAJO *@
            <div class="mb-3">
                <label class="form-label">Turno de Trabajo</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-list-ul"></i></span>
                    <select class="form-select">
                        <option>Opción 1</option>
                        <option>Opción 2</option>
                        <option>Opción 3</option>
                    </select>
                </div>
            </div>

            @* ACTIVO *@
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="true" @(Model.Activo ? "checked=\" checked\"" : "")/>
                    <label class="form-check-label">Usuario Activo</label>
                </div>
            </div>
        </div>
        <!-- Segunda columna -->
        <div class="col-md-6">

            @* PASSWORD *@
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" placeholder="Ingrese su contraseña" value="@Model.Password">
                </div>
            </div>

            @* TELEFONO *@
            <div class="mb-3">
                <label class="form-label">Teléfono</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                    <input type="text" class="form-control" placeholder="Ingrese su número de teléfono" value="@Model.Telefono">
                </div>
            </div>

            @* COMENTARIOS *@
            <div class="mb-3">
                <label class="form-label">Comentarios</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-comment"></i></span>
                    <textarea class="form-control" rows="1" placeholder="Escriba sus comentarios"></textarea>
                </div>
            </div>

            @* FOTO DE PERFIL *@
            <div class="mb-3">
                <label class="form-label">Foto de perfil</label>
                <div class="input-group">
                    <input type="file" class="form-control">
                    <span class="input-group-text"><i class="fas fa-upload"></i></span>
                </div>
            </div>
        </div>

        @* BOTONES *@
        <div class="fa-pull-left">
            <button id="btnAddUser" type="submit" class="btn btn-outline-success m-2"><span class="fa fa-check"></span> Aceptar</button>
            <button id="btnAddUser" type="button" class="btn btn-outline-danger m-2"><span class="fa fa-circle-xmark"> </span> Cancelar</button>
        </div>
    </div>

</form>