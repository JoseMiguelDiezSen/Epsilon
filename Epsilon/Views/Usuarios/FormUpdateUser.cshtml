@using Epsilon.ViewModels
@model ViewFormAgregarUsuario

<form id="updateUser" method="post" onsubmit="return jqPostUpdateUser(this);">

    <input type="hidden" name="IdUsuario" id="IdUsuario" asp-for="IdUsuario" value="@Model.IdUsuario" />

    <div id="contenedorControles">

        @* IMAGEN *@
        <div class="text-center" style="border-radius:100px;margin-bottom:20px;">
            <img src="~/media/deep.jpg" alt="" height="150px" width="150px" style="border-radius:100px;border:3px solid grey;padding:3px;" />
        </div>


        <div class="row">
            <!-- Primera columna -->
            @* NOMBRE *@
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="label">Nombre</label>
                    <div class="input-group" id="inputNombre">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" asp-for="Nombre" name="Nombre" placeholder="Ingrese su nombre" value="@Model.Nombre" id="inputStyle">
                    </div>
                </div>

                @* CORREO ELECTRONICO *@
                <div class="mb-3">
                    <label class="label">Correo Electrónico</label>
                    <div class="input-group" id="inputCorreo">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input type="email" class="form-control" asp-for="Email" name="Email" placeholder="Ingrese su correo" value="@Model.Email" style="box-shadow: inset 0 2px 6px rgba(220,220,220,0.65);">
                    </div>
                </div>

                @* FECHA ALTA *@
                <div class="mb-3">
                    <label class="label">Fecha de Alta</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa-solid fa-calendar"></i></span>
                        <input type="date" asp-for="FechaAlta" name="FechaAlta" class="form-control" style="box-shadow: inset 0 2px 6px rgba(220,220,220,0.65);">
                    </div>
                </div>

                @* TURNO DE TRABAJO *@
                <div class="mb-3">
                    <label class="label">Turno de Trabajo</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa-solid fa-list-ul"></i></span>
                        <select class="form-select">
                            <option>Opción 1</option>
                        </select>
                    </div>
                </div>

                @* ACTIVO *@
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" name="Activo" type="checkbox" asp-for="Activo" id="chekActivo" value="@(Model.Activo ? "checked=\" checked\"" : "")" />
                        <label class="form-check-label">Usuario Activo</label>
                    </div>
                </div>
            </div>

            <!-- Segunda columna -->
            <div class="col-md-6">

                @* PASSWORD *@
                <div class="mb-3">
                    <label class="label">Password</label>
                    <div class="input-group" id="inputPassword">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" id="Password" asp-for="Password" name="Password" class="form-control" placeholder="Ingrese su contraseña" value="@Model.Password" style="box-shadow: inset 0 2px 6px rgba(220,220,220,0.65);">
                        <button class="btn btn-outline-secondary" type="button" id="togglePassword" style="border:1px solid gainsboro;height:35px;">
                            <i class="fas fa-eye"></i> <!-- Ícono de ver -->
                        </button>
                    </div>
                </div>

                @* TELEFONO *@
                <div class="mb-3">
                    <label class="label">Teléfono</label>
                    <div class="input-group" id="inputTelefono">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        <input type="number" asp-for="Telefono" name="Telefono" class="form-control" placeholder="Ingrese su número de teléfono" value="@Model.Telefono" style="box-shadow: inset 0 2px 6px rgba(220,220,220,0.65);">
                    </div>
                </div>

                @* COMENTARIOS *@
                <div class="mb-3">
                    <label class="label">Comentarios</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-comment"></i></span>
                        <textarea class="form-control" rows="1" id="Comentarios" placeholder="Escriba sus comentarios" style="box-shadow: inset 0 2px 6px rgba(220,220,220,0.65);"></textarea>
                    </div>
                </div>

                @* FOTO DE PERFIL *@
                <div class="mb-3">
                    <label class="label">Foto de perfil</label>
                    <div class="input-group">
                        <input type="file" class="form-control" id="@Model?.RutaFoto" style="box-shadow: inset 0 2px 6px rgba(220,220,220,0.65);">
                        <span class="input-group-text"><i class="fas fa-upload"></i></span>
                    </div>
                </div>
            </div>

        </div>
    </div>

    @* BOTONES *@
    <div class="fa-pull-left pt-2">
        <button id="btnAddUser" type="submit" class="btn btn-outline-success"><span class="fa fa-check"></span> Aceptar</button>
        <button id="btnCancel" type="button" class="btn btn-outline-danger" data-bs-dismiss="modal"><span class="fa fa-circle-xmark"> </span> Cancelar</button>
    </div>

</form>


<!-- Script : Ver / Ocultar pass -->
<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        let passwordInput = document.getElementById("Password");
        let icon = this.querySelector("i");

        // Alternar entre 'password' y 'text'
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            icon.classList.replace("fa-eye", "fa-eye-slash"); // Ícono de ocultar
        } else {
            passwordInput.type = "password";
            icon.classList.replace("fa-eye-slash", "fa-eye"); // Ícono de mostrar
        }
    });
</script>

<style>

    #chekActivo {
        height: 20px;
        width: 20px;
        accent-color: orange;
        margin-left: -20px;
    }

    /* Tamaño text labels */
    label {
        font-size: 14px;
    }

    #Nombre {
        font-size: 14px;
    }

    #Password {
        font-size: 14px;
    }

    #Telefono {
        font-size: 14px;
    }

    #Email {
        font-size: 14px;
    }

    #Comentarios {
        font-size: 14px;
    }

    /* Tamaño texto controles */
    #FechaAlta {
        font-size: 14px;
    }


    #IdUsuario {
        font-size: 14px;
    }

</style>