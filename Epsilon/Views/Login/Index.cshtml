@using Epsilon.ViewModels
@model ViewFormAgregarUsuario
@{
    ViewData["Title"] = "Login";
}
@{
    Layout = null;  // <- Esto evita que cargue _Layout.cshtml
}

<title>@ViewData["Title"] - Epsilon</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />


<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/js/Login.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

<form id="LoginUsuarioForm" method="post" style="border:1px solid gainsboro;padding:10px" asp-action="LoginUser" onsubmit="return jqPostLoginUser(this);">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="width: 350px; border-radius: 12px;">
            <h3 class="text-center mb-4">EPSILON</h3>
            
            
            
            <div class="mb-3">
            
                <div class="input-group" id="inputNombre">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" id="Nombre" asp-for="Nombre" placeholder="Usuario">
                </div>
            
            </div>
            <div class="mb-3">
                <div class="input-group" id="inputPassword">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" id="Password" asp-for="Password" class="form-control" placeholder="Ingrese su contraseña">
                    <button class="btn btn-outline-secondary" type="button" id="togglePassword" style="border:1px solid gainsboro;height:38px;">
                        <i class="fas fa-eye" style="margin-bottom:3px;"></i> <!-- Ícono de ver -->
                    </button>
                </div>
            </div>


            <div class="d-flex justify-content-between">
                <button id="btnAceptar" class="btn btn-outline-success w-50 me-2" onclick="jqPostLoginUser()">Aceptar</button>
                <button id="btnCancelar" class="btn btn-outline-danger w-50">Cancelar</button>
            </div>
            <div id="mensaje" class="text-danger mt-3 text-center"></div>
        </div>
    </div>

<div id="mensaje" style="color:red; margin-top:10px;"></div>
</form>

<style>

    body{
    
    background-color:cornflowerblue;
    }

</style>


<!-- Script : Ver / Ocultar pass -->
<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        let passwordInput = document.getElementById("Password");
        let icon = this.querySelector("i");

        // Alternar entre 'password' y 'text'
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            icon.classList.replace("fa-eye", "fa-eye-slash"); // Ícono de ocultar
        } else {
            passwordInput.type = "password";
            icon.classList.replace("fa-eye-slash", "fa-eye"); // Ícono de mostrar
        }
    });
</script>
