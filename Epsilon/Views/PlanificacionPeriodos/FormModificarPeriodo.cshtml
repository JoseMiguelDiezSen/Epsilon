@using Epsilon.ViewModels
@model ViewFormAgregarPeriodo

<form id="idUpdatePeriodo_Form" method="post" asp-action="ModificarPeriodo" onsubmit="return jqPostModificarPeriodo(this);">
    <input type="hidden" name="IdPeriodo" id="IdPeriodo" value="@Model.IdPeriodo" />

    <div class="form-group row md-1">
        <div class="col-md-11 m-2">
            <label for="txtEjercicio" class="col-md-10 col-form-label">Ejercicio</label>
            <input type="text" id="txtEjercicio" asp-for="Ejercicio" name="Ejercicio" MaxLength="75" class="form-control float_label" value="@Model.Ejercicio" text="Año de planificacion" />
        </div>


    </div>
    <div class="form-group row md-1">
        <div class="col-md-11 m-2">
            <label for="txtInicioPeriodo" class="col-md-10 col-form-label">Inicio del periodo:</label>
            <input type="date" id="txtInicioPeriodo" asp-for="Desde" name="Desde" MaxLength="75" class="form-control float_label" title="Fecha de inicio de periodo" placeholder="Fecha de Inicio" value="@Model?.Desde.ToString("yyyy-MM-dd")" />
        </div>
    </div>
    <div class="form-group row md-1">
        <div class="col-md-11 m-2">
            <label for="txtFinalPeriodo" class="col-md-10 col-form-label">Final del periodo:</label>
            <input type="date" id="txtFinalPeriodo" asp-for="Hasta" name="Hasta" MaxLength="75" class="form-control float_label" title="Fecha de fin de periodo" placeholder="Fecha de fin" value="@Model?.Hasta.ToString("yyyy-MM-dd")" />
        </div>
    </div>

    <button id="btnAddUser" type="submit" class="btn btn-sm btn-primary m-2">Aceptar</button>
</form>

